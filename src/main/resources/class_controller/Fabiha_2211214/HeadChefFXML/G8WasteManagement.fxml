<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="class_controller.Fabiha_2211214.HeadChef.WasteManagementController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Waste Management" />
    <HBox spacing="20" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
        <VBox>
            <Label text="Total Waste (kg)"/>
            <Label fx:id="todayWasteLabel" text="0.0 kg" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
        <VBox>
            <Label text="Cost Impact"/>
            <Label fx:id="costImpactLabel" text="BDT 0.00" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: red;"/>
        </VBox>
        <VBox>
            <Label text="Primary Category"/>
            <Label fx:id="primaryCategoryLabel" text="-" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
    </HBox>
    <VBox spacing="10" style="-fx-border-color: #ccc; -fx-padding: 15; -fx-border-radius: 5;">
        <Label text="Log New Waste" style="-fx-font-weight: bold;"/>
        <HBox spacing="10">
            <TextField fx:id="ingredientIdTextField" promptText="Ingredient ID/Name" HBox.hgrow="ALWAYS"/>
            <TextField fx:id="wasteQuantityTextField" promptText="Qty (kg)" prefWidth="100"/>
            <ComboBox fx:id="wasteReasonComboBox" promptText="Reason" prefWidth="150"/>
        </HBox>
        <HBox spacing="10" alignment="TOP_RIGHT">
            <TextArea fx:id="wasteNotesTextArea" promptText="Notes..." prefRowCount="2" HBox.hgrow="ALWAYS"/>
            <Button text="Log Waste" onAction="#handleSubmitWasteLogONA" prefHeight="50" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Generate Weekly Analysis" onAction="#handleGenerateWeeklyReportONA"/>
        <Button text="Download PDF" onAction="#handleDownloadReportPdfONA"/>
    </HBox>
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <PieChart fx:id="wasteCategoryPieChart" title="Waste by Category" HBox.hgrow="ALWAYS"/>
        <LineChart fx:id="wasteTrendLineChart" title="Waste Trend" HBox.hgrow="ALWAYS">
            <xAxis><CategoryAxis label="Date"/></xAxis>
            <yAxis><NumberAxis label="kg"/></yAxis>
        </LineChart>
    </HBox>
</VBox>