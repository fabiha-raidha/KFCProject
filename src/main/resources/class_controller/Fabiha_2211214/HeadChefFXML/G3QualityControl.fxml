<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="class_controller.Fabiha_2211214.HeadChef.QualityControlController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Quality Control &amp; Compliance" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="checklistStatusLabel" style="-fx-font-weight: bold; -fx-text-fill: #e67e22;" text="Checklist Status: Pending" />
        <Button fx:id="viewChecklistButton" onAction="#handleDailyChecklistONA" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Complete Daily Hygiene Checklist" />
    </HBox>
    <Label fx:id="expiryAlertLabel" style="-fx-text-fill: red; -fx-font-weight: bold;" text="Expiry Alerts: No items expiring soon." />
    <Separator />
    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Inspection &amp; QC Logs" />
    <TableView fx:id="inspectionLogTableView" prefHeight="150.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="logTypeColumn" prefWidth="150.0" text="Type" />
            <TableColumn fx:id="lastCheckColumn" prefWidth="120.0" text="Last Checked" />
            <TableColumn fx:id="nextScheduleColumn" prefWidth="120.0" text="Next Due" />
            <TableColumn fx:id="complianceScoreColumn" prefWidth="100.0" text="Score" />
            <TableColumn fx:id="actionsColumn" prefWidth="200.0" text="Action Taken" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    <Separator />
    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Temperature Logs (Cold Storage / Cooking)" />
    <TableView fx:id="tempLogTableView" prefHeight="200.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="tempItemColumn" prefWidth="150.0" text="Item/Area" />
            <TableColumn fx:id="tempReadingColumn" prefWidth="100.0" text="Temp (°C)" />
            <TableColumn fx:id="timestampColumn" prefWidth="150.0" text="Time Recorded" />
            <TableColumn fx:id="tempStatusColumn" prefWidth="150.0" text="Safety Status" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
        <Label style="-fx-font-weight: bold;" text="Record New Reading:" />
        <TextField fx:id="tempItemTextField" promptText="Item Name (e.g. Chicken)" HBox.hgrow="ALWAYS" />
        <TextField fx:id="tempReadingTextField" prefWidth="120" promptText="Temp (°C)" />
        <Button onAction="#handleSaveNewTemperatureONA" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Save Reading" />
    </HBox>
</VBox>