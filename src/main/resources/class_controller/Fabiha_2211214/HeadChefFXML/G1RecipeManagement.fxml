<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="class_controller.Fabiha_2211214.HeadChef.RecipeController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Recipe &amp; Menu Management" />
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <ComboBox fx:id="statusFilterComboBox" promptText="Status" prefWidth="120"/>
        <ComboBox fx:id="regionFilterComboBox" promptText="Region" prefWidth="120"/>
        <TextField fx:id="dishSearchTextField" promptText="Search Dish Name/ID" HBox.hgrow="ALWAYS"/>
        <Button text="Search" onAction="#handleFilterRecipesONA" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button text="Reset" onAction="#handleResetFilterONA"/>
    </HBox>
    <TableView fx:id="recipeTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dishIdTableColumn" text="ID" prefWidth="60"/>
            <TableColumn fx:id="nameTableColumn" text="Dish Name" prefWidth="150"/>
            <TableColumn fx:id="priceTableColumn" text="Price" prefWidth="80"/>
            <TableColumn fx:id="statusTableColumn" text="Status" prefWidth="100"/>
            <TableColumn fx:id="regionsTableColumn" text="Regions" prefWidth="120"/>
            <TableColumn fx:id="actionsTableColumn" text="Actions" prefWidth="100"/>
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
    </TableView>
    <HBox spacing="10.0" style="-fx-border-color: #ccc; -fx-padding: 10; -fx-border-radius: 5;" alignment="CENTER_LEFT">
        <Label text="Recipe Details:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="newDishNameTextField" promptText="Dish Name" HBox.hgrow="ALWAYS"/>
        <TextField fx:id="newPriceTextField" promptText="Price" prefWidth="80"/>
        <ComboBox fx:id="newStatusComboBox" promptText="Status" prefWidth="110"/>
        <ComboBox fx:id="newRegionComboBox" promptText="Region" prefWidth="110"/>
        <Button text="Add New" onAction="#handleSaveNewRecipeONA" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Update Selected" onAction="#handleUpdateRecipeONA" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
    <Label fx:id="totalRecipeLabel" text="Total Recipes: 0" />
</VBox>