<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="class_controller.Fabiha_2211214.HeadChef.InventoryController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Inventory Management" />
    <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-border-color: #ddd; -fx-padding: 10; -fx-border-radius: 5;">
        <Label style="-fx-font-weight: bold;" text="Filters:" />
        <TextField fx:id="nameFilterTextField" promptText="Ingredient Name" />
        <TextField fx:id="recipeFilterTextField" promptText="Used in Recipe..." />
        <ComboBox fx:id="stockWarningFilterComboBox" prefWidth="150" promptText="Stock Status" />
        <Button onAction="#handleFilterONA" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Apply Filter" />
        <Button onAction="#handleResetFilterONA" text="Reset" />
    </HBox>
    <TableView fx:id="ingredientTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idTableColumn" prefWidth="60.0" text="ID" />
            <TableColumn fx:id="nameTableColumn" prefWidth="150.0" text="Ingredient Name" />
            <TableColumn fx:id="quantityTableColumn" prefWidth="100.0" text="Current Qty" />
            <TableColumn fx:id="requiredQuantityTableColumn" prefWidth="100.0" text="Required Qty" />
            <TableColumn fx:id="stockWarningTableColumn" prefWidth="120.0" text="Status" />
            <TableColumn fx:id="usedInRecipesTableColumn" prefWidth="150.0" text="Used In (Recipes)" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    <Label fx:id="statusLabel" text="Total Ingredients: 0" />
    <Separator />
    <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f9f9f9; -fx-padding: 10; -fx-background-radius: 5;">
        <Label style="-fx-font-weight: bold;" text="Manage Item:" />
        <TextField fx:id="newNameTextField" promptText="Name" HBox.hgrow="ALWAYS" />
        <TextField fx:id="newCurrentQtyTextField" prefWidth="90" promptText="Curr. Qty" />
        <TextField fx:id="newRequiredQtyTextField" prefWidth="90" promptText="Req. Qty" />
        <TextField fx:id="newUsedInTextField" prefWidth="150" promptText="Used In (e.g. Burger)" />
        <Button onAction="#handleAddIngredientONA" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="Add New" />
        <Button onAction="#handleUpdateStockONA" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold;" text="Update Selected" />
    </HBox>
</VBox>