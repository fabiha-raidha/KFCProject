<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="customerDashboardBP"
            prefHeight="450.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="class_controller.Marzana_2432038.Customer.CustomerDashboardController">
    <left>
        <VBox prefHeight="400.0" prefWidth="180.0" style="-fx-background-color: #2f4f4f;" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="browseMenuBtn" mnemonicParsing="false" onAction="#browseMenuOA" prefWidth="180.0" text="Browse Menu" />
                <Button fx:id="placeOrderBtn" mnemonicParsing="false" onAction="#placeOrderOA" prefWidth="180.0" text="Place Order" />
                <Button fx:id="trackDeliveryBtn" mnemonicParsing="false" onAction="#trackDeliveryOA" prefWidth="180.0" text="Track Delivery" />
                <Button fx:id="feedbackBtn" mnemonicParsing="false" onAction="#feedbackOA" prefWidth="180.0" text="Feedback" />
                <Button fx:id="createAccountBtn" mnemonicParsing="false" onAction="#createAccountOA" prefWidth="180.0" text="Create Account" />
                <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#loginOA" prefWidth="180.0" text="Login" />
                <Button fx:id="addToCartBtn" mnemonicParsing="false" onAction="#addToCartOA" prefWidth="180.0" text="Add To Cart" />
                <Button fx:id="viewCartBtn" mnemonicParsing="false" onAction="#viewCartOA" prefWidth="180.0" text="View Cart" />
                <Button fx:id="profileBtn" mnemonicParsing="false" onAction="#profileOA" prefWidth="180.0" text="Profile" />
                <Button fx:id="signOutBtn" mnemonicParsing="false" onAction="#signOutOA" prefWidth="180.0" text="Sign Out" />
            </children>
        </VBox>
    </left>
    <center>
        <AnchorPane prefHeight="400.0" prefWidth="720.0" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="320.0" layoutY="20.0" text="Customer Dashboard" style="-fx-font-size:20px; -fx-font-weight:bold;" />
                <ImageView fitHeight="140.0" fitWidth="200.0" layoutX="480.0" layoutY="60.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Media/customer.png" />
                    </image>
                </ImageView>
                <Label fx:id="greetL" layoutX="25.0" layoutY="80.0" text="Welcome, Customer" style="-fx-font-size:14px;"/>
                <Label fx:id="accountL" layoutX="25.0" layoutY="110.0" text="Account: Guest" style="-fx-font-size:12px;"/>
                <Label fx:id="infoL" layoutX="25.0" layoutY="140.0" text="Choose an action from the left." style="-fx-font-size:12px;"/>
                <Label layoutX="25.0" layoutY="190.0" text="Cart Items:" />
                <Label fx:id="cartCountL" layoutX="120.0" layoutY="190.0" text="0" />
                <Label layoutX="25.0" layoutY="220.0" text="Pending Orders:" />
                <Label fx:id="pendingOrdersL" layoutX="140.0" layoutY="220.0" text="0" />
                <Label layoutX="25.0" layoutY="250.0" text="Loyalty Points:" />
                <Label fx:id="loyaltyL" layoutX="140.0" layoutY="250.0" text="0" />
            </children>
        </AnchorPane>
    </center>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close" onAction="#fileCloseOA"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="View">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Refresh" onAction="#viewRefreshOA"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" onAction="#helpAboutOA"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
